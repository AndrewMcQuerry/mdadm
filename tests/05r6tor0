set -x -e

# reshape a RAID6 to RAID5 and then RAID0.
# then reshape back up to RAID5 and RAID5

mdadm -CR $md0 -l6 -n5 $dev0 $dev1 $dev2 $dev3 $dev4
check wait
check raid6
mdadm -G $md0 -l5
check wait
check raid5
mdadm -G $md0 -l0
check wait
check raid0
mdadm -G $md0 -l5 --add $dev3 $dev4
check wait
check raid5
check algorithm 2
mdadm -G $md0 -l 6
check wait
check raid6
check algorithm 2
